<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="5dp"
        android:background="@color/gray">

    <LinearLayout
            android:background="@drawable/killer_background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="50pt" app:srcCompat="@drawable/baboon" android:id="@+id/animal_pic"
                android:layout_weight="2"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:text="Babon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txt_AnimalName" android:layout_weight="1"
                    android:textSize="24sp" android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_ShortDesc" android:layout_weight="1"
                    android:text="Babon lives in zoo with different animals"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>